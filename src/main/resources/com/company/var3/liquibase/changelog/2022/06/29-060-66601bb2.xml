<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="var3">
        <createTable tableName="DEPARTMENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEPARTMENT"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="var3">
        <addColumn tableName="INITIATOR">
            <column name="DEPARTMENT_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="var3">
        <createIndex indexName="IDX_USER_DEPARTMENT_ID" tableName="INITIATOR">
            <column name="DEPARTMENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="DEPARTMENT_ID" baseTableName="INITIATOR"
                                 constraintName="FK_INITIATOR_ON_DEPARTMENT" referencedColumnNames="ID"
                                 referencedTableName="DEPARTMENT"/>
    </changeSet>
</databaseChangeLog>