<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="var3">
        <addColumn tableName="USER_">
            <column name="EMPLOYEE_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="var3">
        <createIndex indexName="IDX_USER_EMPLOYEE_ID" tableName="USER_">
            <column name="EMPLOYEE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_ID" baseTableName="USER_"
                                 constraintName="FK_USER__ON_EMPLOYEE" referencedColumnNames="ID"
                                 referencedTableName="INITIATOR"/>
    </changeSet>
    <changeSet id="3" author="var3">
        <addNotNullConstraint columnDataType="UUID" columnName="USER_ID" tableName="INITIATOR" validate="true"/>
    </changeSet>
</databaseChangeLog>