<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="var3">
        <createTable tableName="USER_">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_"/>
            </column>
            <column name="JOB_TITLE" type="VARCHAR(255)"/>
            <column name="DEPARTMENT_ID" type="UUID"/>
            <column name="USERNAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PASSWORD" type="VARCHAR(255)"/>
            <column name="FIRST_NAME" type="VARCHAR(255)"/>
            <column name="LAST_NAME" type="VARCHAR(255)"/>
            <column name="EMAIL" type="VARCHAR(255)"/>
            <column name="ACTIVE" type="BOOLEAN"/>
            <column name="TIME_ZONE_ID" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="var3">
        <addForeignKeyConstraint baseColumnNames="DEPARTMENT_ID" baseTableName="USER_"
                                 constraintName="FK_USER__ON_DEPARTMENT" referencedColumnNames="ID"
                                 referencedTableName="DEPARTMENT"/>
    </changeSet>
    <changeSet id="3" author="var3">
        <dropForeignKeyConstraint baseTableName="initiator" constraintName="fk_initiator_on_department"/>
    </changeSet>
    <changeSet id="4" author="var3">
        <dropColumn columnName="active" tableName="initiator"/>

        <dropColumn columnName="email" tableName="initiator"/>

        <dropColumn columnName="first_name" tableName="initiator"/>

        <dropColumn columnName="job_title" tableName="initiator"/>

        <dropColumn columnName="last_name" tableName="initiator"/>

        <dropColumn columnName="password" tableName="initiator"/>

        <dropColumn columnName="time_zone_id" tableName="initiator"/>

        <dropColumn columnName="username" tableName="initiator"/>
    </changeSet>
    <changeSet id="5" author="var3">
        <dropForeignKeyConstraint baseTableName="REQUEST" constraintName="FK_REQUEST_ON_EXECUTOR"/>
    </changeSet>
    <changeSet id="6" author="var3">
        <addForeignKeyConstraint baseColumnNames="EXECUTOR_ID" baseTableName="REQUEST"
                                 constraintName="FK_REQUEST_ON_EXECUTOR" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>