<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="var3">
        <addColumn tableName="INITIATOR">
            <column name="USER_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="USER_ID" tableName="INITIATOR"/>
    </changeSet>
    <changeSet id="2" author="var3">
        <createIndex indexName="IDX_EMPLOYEE_DEPARTMENT_ID" tableName="INITIATOR">
            <column name="DEPARTMENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="DEPARTMENT_ID" baseTableName="INITIATOR"
                                 constraintName="FK_INITIATOR_ON_DEPARTMENT" referencedColumnNames="ID"
                                 referencedTableName="DEPARTMENT"/>
    </changeSet>
    <changeSet id="3" author="var3">
        <createIndex indexName="IDX_EMPLOYEE_USER_ID" tableName="INITIATOR">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="INITIATOR"
                                 constraintName="FK_INITIATOR_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="4" author="var3">
        <dropColumn columnName="department_id" tableName="user_"/>

        <dropColumn columnName="job_title" tableName="user_"/>
    </changeSet>
    <changeSet id="5" author="var3">
        <dropForeignKeyConstraint baseTableName="REQUEST" constraintName="FK_REQUEST_ON_EXECUTOR"/>
    </changeSet>
    <changeSet id="6" author="var3">
        <addForeignKeyConstraint baseColumnNames="EXECUTOR_ID" baseTableName="REQUEST"
                                 constraintName="FK_REQUEST_ON_EXECUTOR" referencedColumnNames="ID"
                                 referencedTableName="INITIATOR"/>
    </changeSet>
</databaseChangeLog>